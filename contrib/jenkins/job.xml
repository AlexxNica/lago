    <hudson.tasks.Shell>
      <command># Checkout the correct refs for vdsm and engine:
if [ ! -z $VDSM_HEAD ]
then
    cd $WORKSPACE/vdsm
    git fetch origin $VDSM_HEAD &amp;&amp; git checkout FETCH_HEAD
fi

if [ ! -z $ENGINE_HEAD ]
then
    cd $WORKSPACE/ovirt-engine
    git fetch origin $ENGINE_HEAD &amp;&amp; git checkout FETCH_HEAD
fi


</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>export PYTHONPATH=$PWD:$PYTHONPATH

cd $WORKSPACE/lago

LOCAL_CLONE_URL=&quot;/home/jenkins/workspace/ovirt_integration-test-poc2_created/lago-images-repo&quot;

if [ ! -d $WORKSPACE/templates ]
then
    bin/sync_templates.py --create $LOCAL_CLONE_URL $WORKSPACE/templates
else
    bin/sync_templates.py $WORKSPACE/templates
fi</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>LAGODIR=$(realpath $WORKSPACE/lago)
LAGOCLI=$LAGODIR/lago/lagocli_local
PREFIX=$WORKSPACE/jenkins-deployment
OVIRT_CONTRIB=$LAGODIR/contrib/ovirt

if [ ! -z $VDSM_HEAD ]
then
VDSM_PATH=$WORKSPACE/vdsm
fi

if [ ! -z $ENGINE_HEAD ]
then
ENGINE_PATH=$WORKSPACE/ovirt-engine
fi

chmod g+x $WORKSPACE

set -e

$LAGOCLI init $PREFIX
echo &apos;[INIT_OK] Initialized successfully, need cleanup later&apos; 

cd $PREFIX
$LAGOCLI ovirt-reposetup \
    --rpm-repo=$WORKSPACE/ovirt-repo \
    --reposync-yum-config=$OVIRT_CONTRIB/config/repos/ovirt-master-snapshot-external.repo \
    --engine-dir=$ENGINE_PATH \
    --engine-dist=el6 \
    --vdsm-dir=$VDSM_PATH \
    --vdsm-dist=el6 

$LAGOCLI start $OVIRT_CONTRIB/config/virt/centos65.json \
    --templates-dir=$WORKSPACE/templates \
    --scripts-dir=$OVIRT_CONTRIB/setup_scripts

$LAGOCLI ovirt-runtest $OVIRT_CONTRIB/test_scenarios/bootstrap.py
$LAGOCLI ovirt-snapshot
$LAGOCLI ovirt-runtest $OVIRT_CONTRIB/test_scenarios/basic_sanity.py</command>
    </hudson.tasks.Shell>
